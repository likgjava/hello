	<!-- 欢迎页面 -->
	<welcome-file-list>
		<welcome-file>/view/common/login.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- 错误页面 -->
	<error-page>
		<error-code>404</error-code>
		<location>/view/common/404.html</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/view/common/403.html</location>
	</error-page>
	
</web-app>